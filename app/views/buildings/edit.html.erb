<h1> Edit This Building </h1>

<% if @building.errors.any? %>
<div id="error_explanation">
  <h2>There were some errors:</h2>
  <ul>
    <% @building.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
   

<%=form_for @building do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :country %>
    <%= f.text_field :country %>
    <%= f.label :address %>
    <%= f.text_field :address %>
    <%= f.label :rent_per_floor %>
    <%= f.number_field :rent_per_floor, step: 0.01 %>
    <%= f.label :number_of_floors %>
    <%= f.number_field :number_of_floors %>
    <%= f.submit "Submit"%>
<%end%>
    
    