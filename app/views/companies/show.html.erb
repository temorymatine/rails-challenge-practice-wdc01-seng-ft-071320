<h1> <%=  @company.name %> </h1>

<% @company.offices.each do |office| %>
   <div> <%= "Building Name: #{office.building.name}" %> </div>
    <div><%= "Office Floor: #{office.floor}" %></div>

    <%end%>
<h3>All Employees:</h3>
<% @company.employees.each do |employee| %>
   <div> <%= employee.name %> 
   <% end %>
    <br>
<%= link_to "Enter New Employee", new_employee_path(@company)%>
<%= link_to "Delete an Employee", delete_form_path %>

<% sum = 0 %>
<% @company.buildings.each do |building| %>
   <%  sum += building.rent_per_floor %> 
<%end%>
<div><%=  sum %></div>
